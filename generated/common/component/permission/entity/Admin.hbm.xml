<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="common.component.permission.entity.Admin"
        table="t_admin"
        dynamic-update="true"
        dynamic-insert="true"
    >

        <id
            name="id"
            column="p_id"
            type="java.lang.String"
            unsaved-value="-1"
        >
            <generator class="uuid.hex">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Admin.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="p_name"
            length="64"
        />

        <property
            name="password"
            type="string"
            update="true"
            insert="true"
            column="p_password"
        />

        <many-to-one
            name="role"
            class="common.component.permission.entity.Role"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="p_role"
        />

        <property
            name="username"
            type="java.lang.String"
            update="true"
            insert="true"
            column="p_username"
        />

        <property
            name="position"
            type="java.lang.String"
            update="true"
            insert="true"
            column="p_position"
        />

        <property
            name="group"
            type="java.lang.String"
            update="true"
            insert="true"
            column="p_group"
        />

        <property
            name="createTime"
            type="java.sql.Timestamp"
            update="false"
            insert="true"
            column="p_createTime"
        />

        <property
            name="modifyTime"
            type="java.sql.Timestamp"
            update="true"
            insert="false"
            column="p_modifyTime"
        />

        <property
            name="creator"
            type="string"
            update="false"
            insert="true"
            column="p_creator"
        />

        <property
            name="modifier"
            type="string"
            update="true"
            insert="false"
            column="p_modifier"
        />

        <property
            name="remark"
            type="string"
            update="true"
            insert="true"
            column="p_remark"
        />

        <property
            name="deleted"
            type="java.lang.Boolean"
            update="true"
            insert="false"
            column="p_deleted"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Admin.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
