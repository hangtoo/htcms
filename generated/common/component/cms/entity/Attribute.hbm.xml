<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="common.component.cms.entity.Attribute"
        table="t_attribute"
        dynamic-update="true"
        dynamic-insert="true"
    >

        <id
            name="id"
            column="p_id"
            type="java.lang.String"
            unsaved-value="-1"
        >
            <generator class="uuid.hex">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Attribute.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="p_name"
        />

        <many-to-one
            name="catalogue"
            class="common.component.cms.entity.Catalogue"
            cascade="none"
            outer-join="true"
            update="true"
            insert="true"
            column="p_catalogue"
        />

        <property
            name="column"
            type="java.lang.String"
            update="true"
            insert="true"
            column="p_column"
        />

        <property
            name="type"
            type="java.lang.String"
            update="true"
            insert="true"
            column="p_type"
        />

        <property
            name="length"
            type="java.lang.String"
            update="true"
            insert="true"
            column="p_length"
        />

        <property
            name="createTime"
            type="java.sql.Timestamp"
            update="false"
            insert="true"
            column="p_createTime"
        />

        <property
            name="modifyTime"
            type="java.sql.Timestamp"
            update="true"
            insert="false"
            column="p_modifyTime"
        />

        <property
            name="creator"
            type="string"
            update="false"
            insert="true"
            column="p_creator"
        />

        <property
            name="modifier"
            type="string"
            update="true"
            insert="false"
            column="p_modifier"
        />

        <property
            name="remark"
            type="string"
            update="true"
            insert="true"
            column="p_remark"
        />

        <property
            name="deleted"
            type="java.lang.Boolean"
            update="true"
            insert="false"
            column="p_deleted"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Attribute.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
